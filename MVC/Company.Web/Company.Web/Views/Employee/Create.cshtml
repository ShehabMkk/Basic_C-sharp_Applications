@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Company.Data.Models.Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Employee</h1>
<br />
<br />

<form asp-action="Create">
    
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" />
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control" />
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Phone"></label>
        <input type="text" asp-for="Phone" class="form-control" />
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="number" asp-for="Salary" class="form-control" />
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="ImageUrl"></label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DepartmentId"></label>
        <input type="number" asp-for="DepartmentId" class="form-control" />
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    
    <div>
        @Html.ValidationSummary(true, "EmployeeError","Error While Adding Employee")
    </div>
    

    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>