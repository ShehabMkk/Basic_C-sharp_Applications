@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Company.Data.Models.Employee>
@{
    ViewData["Title"] = "Index";
}
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.Salary)</th>
            <th>@Html.DisplayNameFor(model => model.IsCreated)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var Employee in Model)
        {
            <tr>
                <td>@Employee.Id</td>
                <td>@Employee.Name</td>
                <td>@Employee.Phone</td>
                <td>@Employee.Salary</td>
                <td>@Employee.IsCreated</td>
                <td>
                    <a asp-action="Details" asp-route-id="@Employee.Id" class="btn btn-warning">
                        <i class="fas fa-eye"></i> Details
                    </a>
                </td>
                <td>
                        <a asp-action="Update" asp-route-id="@Employee.Id" class="btn btn-success">
                        <i class="fas fa-edit"></i> Update
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class = "mt-5 alert alert-warning">
        <h3>There are no Employees</h3>
    </div>
}